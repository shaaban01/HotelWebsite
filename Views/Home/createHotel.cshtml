@model Lab_10.Models.Hotel;
@{
    ViewData["Title"] = "Create Hotel";
}

<form class="text-white" action="/home/createHotel" method="post">
    <div class="row">
        <div class="form-group col">
            <label for="">Name</label>
            <input type="text" asp-for="name" class="form-control" aria-describedby="" placeholder="" required>
        </div>
        <div class="form-group col">
            <label for="">Location</label>
            <input type="text" asp-for="location" class="form-control" id="" placeholder="" required>
        </div>
    </div>
    <div class="row">
        <div class="form-group col">
            <label for="">Rooms</label>
            <input type="number" asp-for="rooms" class="form-control" min="1" id="" placeholder="" required>
        </div>
        <div class="form-group col">
            <label for="">Phone</label>
            <input type="text" asp-for="phone" class="form-control" id="" placeholder="" required>
        </div>
        <div class="form-group col">
            <label for="">Rating</label>
            <input type="number" class="form-control" min="0" max="5" asp-for="rating" id="" placeholder="" required>
        </div>
    </div>
    <div class="form-group">
        <label for="">Image URL</label>
        <input type="text" class="form-control" asp-for="imgURL" id="" placeholder="" required>
    </div>
    <div class="form-group col">
        <label for="">Description</label>
        <textarea class="form-control" id="" asp-for="description" placeholder=""> </textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add</button>
</form>